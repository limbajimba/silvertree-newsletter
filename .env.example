# LLM Configuration
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=...
DEFAULT_LLM_PROVIDER=gemini
DEFAULT_MODEL=gemini-2.5-flash
TRIAGE_MODEL=gemini-2.5-flash             # Fast triage with Flash
ANALYSIS_MODEL=gemini-2.5-pro             # Deep analysis with Pro
COMPOSER_MODEL=gemini-2.5-pro             # Email composition with Pro
DEDUPE_MODEL=gemini-2.5-flash             # Fast deduplication with Flash
CARVE_OUT_RESEARCH_MODEL=gemini-2.5-pro   # Deep research with Pro
CARVE_OUT_RESEARCH_ENABLED=true           # Enable carve-out research
CARVE_OUT_RESEARCH_MAX_SOURCES=4          # Max sources per carve-out

# Deep Research (Google Gemini Interactions API)
CARVE_OUT_DEEP_RESEARCH_ENABLED=true      # Enable deep research for carve-outs
DEEP_RESEARCH_POLL_INTERVAL=30            # Poll interval in seconds
DEEP_RESEARCH_MAX_WAIT_MINUTES=45         # Max wait time for deep research
DEEP_RESEARCH_HIGH_PRIORITY_ONLY=true     # Only run deep research for high-priority carve-outs
PORTFOLIO_CONTEXT_DIR=config/portfolio_context  # Directory containing portfolio context files

# Email Configuration (SMTP/Gmail)
# To use Gmail, you need to generate an App Password:
# 1. Enable 2FA: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character password below (no spaces)
SEND_EMAIL=false
FROM_EMAIL=your-email@gmail.com
TO_EMAIL=recipient@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Scheduling
NEWSLETTER_DAY=monday
NEWSLETTER_HOUR=8

# Data Sources
GP_BULLHOUND_RSS=https://www.gpbullhound.com/feed/
PROMPT_CONTEXT_PATH=prompt_context.json
SOURCES_CATALOG_PATH=sources_catalog.json
PERPLEXITY_API_KEY=pplx-...
PERPLEXITY_MODEL=sonar
PERPLEXITY_MAX_ITEMS=8
PERPLEXITY_RPM=50
PERPLEXITY_MAX_RETRIES=3
PERPLEXITY_MAX_CONCURRENT=10
SEARCH_LOOKBACK_DAYS=7
KEEP_UNDATED_ITEMS=false
REQUEST_TIMEOUT_SECONDS=30
RSS_MAX_ITEMS_PER_FEED=30
MAX_SEARCH_COMPANIES=0
MAX_QUERIES_PER_TYPE=0
MAX_SEARCH_QUERIES_TOTAL=0

# Application
DEBUG=false
LOG_LEVEL=INFO
DEDUPE_SIMILARITY_THRESHOLD=0.9
MIN_SIGNAL_SCORE=55
MAX_PORTFOLIO_ITEMS=8
MAX_COMPETITOR_ITEMS=10
MAX_DEAL_ITEMS=12
MAX_INDUSTRY_ITEMS=10
MAX_ITEMS_PER_PORTFOLIO_COMPANY=3
MAX_ITEMS_PER_CLUSTER=5
MAX_DOMAIN_SOURCE_QUERIES=12
MAX_FULL_TEXT_ITEMS=60

# Full-text enrichment
FULL_TEXT_TIMEOUT_SECONDS=20
FULL_TEXT_REQUESTS_PER_MINUTE=60
FULL_TEXT_MAX_CONCURRENCY=6
FULL_TEXT_MAX_CHARS=4000
FULL_TEXT_MIN_CHARS=200

# LLM throughput (Tier 1 Gemini limits: Flash=300 RPM, Pro=150 RPM)
LLM_REQUESTS_PER_MINUTE=300  # Flash tier 1 limit (triage, dedupe)
TRIAGE_MAX_WORKERS=25        # Higher parallelism for faster triage
ANALYSIS_MAX_WORKERS=15      # Pro is slower (150 RPM), use fewer workers
