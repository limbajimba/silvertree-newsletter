# LLM Configuration
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=...
DEFAULT_LLM_PROVIDER=gemini
DEFAULT_MODEL=gemini-2.5-flash
TRIAGE_MODEL=gemini-2.5-flash
ANALYSIS_MODEL=gemini-2.5-pro
COMPOSER_MODEL=gemini-2.5-pro
DEDUPE_MODEL=gemini-2.5-flash

# Email Configuration (SMTP/Gmail)
# To use Gmail, you need to generate an App Password:
# 1. Enable 2FA: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character password below (no spaces)
SEND_EMAIL=false
FROM_EMAIL=your-email@gmail.com
TO_EMAIL=recipient@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Scheduling
NEWSLETTER_DAY=monday
NEWSLETTER_HOUR=8

# Data Sources
GP_BULLHOUND_RSS=https://www.gpbullhound.com/feed/
PROMPT_CONTEXT_PATH=prompt_context.json
SOURCES_CATALOG_PATH=sources_catalog.json
PERPLEXITY_API_KEY=pplx-...
PERPLEXITY_MODEL=sonar
PERPLEXITY_MAX_ITEMS=8
PERPLEXITY_RPM=50
PERPLEXITY_MAX_RETRIES=3
SEARCH_LOOKBACK_DAYS=7
KEEP_UNDATED_ITEMS=false
REQUEST_TIMEOUT_SECONDS=30
RSS_MAX_ITEMS_PER_FEED=30
MAX_SEARCH_COMPANIES=0
MAX_QUERIES_PER_TYPE=0
MAX_SEARCH_QUERIES_TOTAL=0

# Application
DEBUG=false
LOG_LEVEL=INFO
DEDUPE_SIMILARITY_THRESHOLD=0.9
MIN_SIGNAL_SCORE=55
MAX_PORTFOLIO_ITEMS=8
MAX_COMPETITOR_ITEMS=10
MAX_DEAL_ITEMS=12
MAX_INDUSTRY_ITEMS=10
MAX_ITEMS_PER_PORTFOLIO_COMPANY=3
MAX_ITEMS_PER_CLUSTER=5
MAX_DOMAIN_SOURCE_QUERIES=12
MAX_FULL_TEXT_ITEMS=60

# Full-text enrichment
FULL_TEXT_TIMEOUT_SECONDS=20
FULL_TEXT_REQUESTS_PER_MINUTE=60
FULL_TEXT_MAX_CONCURRENCY=6
FULL_TEXT_MAX_CHARS=4000
FULL_TEXT_MIN_CHARS=200

# LLM throughput
LLM_REQUESTS_PER_MINUTE=150
TRIAGE_MAX_WORKERS=10
ANALYSIS_MAX_WORKERS=5
